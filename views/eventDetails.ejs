<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Details</title>
    <script>
        function toggleEditMode() {
            document.getElementById("eventDetails").style.display = "none";
            document.getElementById("editForm").style.display = "block";
        }

        function cancelEdit() {
            document.getElementById("eventDetails").style.display = "block";
            document.getElementById("editForm").style.display = "none";
        }

        async function fetchImages() {
            const eventId = "<%= event._id %>";
            try {
                const response = await fetch(`/events/${eventId}/images`);
                const data = await response.json();
                const gallery = document.getElementById("imageGallery");
                gallery.innerHTML = ""; // Clear previous images
        
                if (data.images.length > 0) {
                    data.images.forEach(image => {
                        const imageContainer = document.createElement("div");
                        imageContainer.style.marginBottom = "15px";
        
                        const img = document.createElement("img");
                        img.src = `/uploads/${image}`;
                        img.alt = "Event Proof";
                        img.width = 200;
        
                        imageContainer.appendChild(img);
                        gallery.appendChild(imageContainer);
                    });
                } else {
                    gallery.innerHTML = "<p>No images uploaded yet.</p>";
                }
        
                // Ensure the "Add New Image" button is always visible
                const addNewImageForm = document.createElement("form");
                addNewImageForm.action = `/events/${eventId}/upload`;
                addNewImageForm.method = "POST";
                addNewImageForm.enctype = "multipart/form-data";
                addNewImageForm.style.marginTop = "10px";
        
                const fileInput = document.createElement("input");
                fileInput.type = "file";
                fileInput.name = "eventImage";
                fileInput.accept = "image/*";
                fileInput.required = true;
        
                const uploadButton = document.createElement("button");
                uploadButton.type = "submit";
                uploadButton.className = "btn btn-success";
                uploadButton.textContent = "Add New Image";
                uploadButton.style.marginLeft = "10px";
        
                addNewImageForm.appendChild(fileInput);
                addNewImageForm.appendChild(uploadButton);
        
                gallery.appendChild(addNewImageForm);
        
            } catch (error) {
                console.error('Error fetching images:', error);
            }
        }
        
        document.addEventListener("DOMContentLoaded", fetchImages);
    </script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            text-align: center;
        }
        .container {
            max-width: 600px;
            margin: 30px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        }
        .form-field {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            display: block;
        }
        .volunteer-list {
            list-style: none;
            padding: 0;
        }
        .volunteer-item {
            background: #e9f7fe;
            padding: 10px;
            margin: 5px 0;
            border-radius: 5px;
            font-size: 16px;
            color: #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .btn {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }
        .btn-primary { background: #007bff; color: white; }
        .btn-success { background: #28a745; color: white; }
        .btn-warning { background: #ffc107; color: black; }
        .btn-danger { background: #dc3545; color: white; }
    </style>
</head>
<body>

    <header style="background: #007bff; color: white; padding: 15px; text-align: center;">
        <h1>Charity Platform</h1>
        <nav>
            <a href="/" class="btn btn-primary">Home</a>
            <a href="/dashboard" class="btn btn-primary">My Events</a>
            <a href="/logout" class="btn btn-primary">Logout</a>
        </nav>
    </header>

    <div class="container">
        <div id="eventDetails">
            <h2><%= event.title %></h2>
            <p><strong>Date:</strong> <%= new Date(event.date).toDateString() %></p>
            <p><strong>Location:</strong> <%= event.location %></p>
            <p><strong>Description:</strong> <%= event.description %></p>

            <button onclick="toggleEditMode()" class="btn btn-warning">Edit Event</button>
        </div>

        <!-- Edit Form -->
        <form id="editForm" action="/events/update/<%= event._id %>" method="POST" style="display: none;">
            <input type="text" name="title" value="<%= event.title %>" class="form-field">
            <input type="date" name="date" value="<%= event.date.toISOString().split('T')[0] %>" class="form-field">
            <input type="text" name="location" value="<%= event.location %>" class="form-field">
            <textarea name="description" class="form-field"><%= event.description %></textarea>
            
            <button type="submit" class="btn btn-success">Save Changes</button>
            <button type="button" onclick="cancelEdit()" class="btn btn-danger">Cancel</button>
        </form>

        <!-- Event Proof Images -->
        <h3>Event Proof Images</h3>
        <div id="imageGallery">
            <% if (event.images.length > 0) { %>
                <% event.images.forEach(image => { %>
                    <div style="margin-bottom: 15px;">
                        <img src="/uploads/<%= image %>" alt="Event Proof" width="200">
                    </div>
                <% }) %>
            <% } else { %>
                <p>No images uploaded yet.</p>
            <% } %>
        </div>

        <h3>Registered Volunteers</h3>
        <ul class="volunteer-list">
            <% event.volunteers.forEach(volunteer => { %>
                <li class="volunteer-item">
                    <span><strong><%= volunteer.name %></strong> - <%= volunteer.email %></span>
                    <form action="/events/remove-volunteer/<%= event._id %>/<%= volunteer._id %>" method="POST">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </li>
            <% }) %>
        </ul>

        <a href="/dashboard" class="btn btn-primary">Back to My Events</a>
    </div>

    <footer style="margin-top: 30px; padding: 10px; background: #333; color: white; text-align: center;">
        <p>&copy; 2025 Charity Platform. All rights reserved.</p>
    </footer>

</body>
</html>
